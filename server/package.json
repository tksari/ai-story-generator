{
  "name": "ai-story-backend",
  "version": "1.0.0",
  "description": "Backend service for generating AI-powered stories, images, speech, and videos.",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/src/main.js",
    "dev": "tsx watch src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx src/seed/index.ts",
    "seed": "sh scripts/seed.sh",
    "worker:story-pages": "tsx src/workers/story-pages.worker.ts",
    "worker:image": "tsx src/workers/image.worker.ts",
    "worker:video": "tsx src/workers/video.worker.ts",
    "worker:speech": "tsx src/workers/speech.worker.ts",
    "worker:all": "concurrently -n story,image,video,audio -c green,blue,magenta \"npm run worker:story\" \"npm run worker:image\" \"npm run worker:video\" \"npm run worker:speech\"",
    "test": "jest --config=jest.config.cjs",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "amqplib": "^0.10.3",
    "axios": "^1.8.4",
    "canvas": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.3",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^11.0.2",
    "google-tts-api": "^2.0.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.12.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0",
    "yaml": "^2.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/amqplib": "^0.10.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.23",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.10.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
